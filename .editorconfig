# EditorConfig helps developers define and maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,md}]
indent_size = 2

[*.bat]
end_of_line = crlf
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab